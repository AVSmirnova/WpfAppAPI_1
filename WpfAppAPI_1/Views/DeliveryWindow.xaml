<Window x:Class="WpfAppAPI_1.Views.DeliveryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppAPI_1.Views"
        mc:Ignorable="d"
        Title="DeliveryWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Саписок заказов"/>
        <DataGrid Grid.Row="1" x:Name="dgDelivery" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер" Binding="{Binding Path= Id}" />
                <DataGridTextColumn Header="Дата создания" Binding="{Binding Path= OpeningDateTime}" />
                <DataGridTextColumn Header="Дата закрытия" Binding="{Binding Path= ClosingDateTime}" />
                <DataGridTextColumn Header="Улица" Binding="{Binding Path= Street}" />
                <DataGridTextColumn Header="Дом" Binding="{Binding Path= House}" />
                <DataGridTextColumn Header="Корпус" Binding="{Binding Path= Building}" />
                <DataGridTextColumn Header="Кватира" Binding="{Binding Path= Apartment}" />
                <DataGridTextColumn Header="Статус" Binding="{Binding Path= Status.Title}" />
                <DataGridTextColumn Header="Клиент" Binding="{Binding Path= Client.LastName}" />
                <DataGridTextColumn Header="Курьер" Binding="{Binding Path= Courier.LastName}" />





            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
