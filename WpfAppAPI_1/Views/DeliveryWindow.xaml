<Window x:Class="WpfAppAPI_1.Views.DeliveryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppAPI_1.Views"
        mc:Ignorable="d"
        Title="DeliveryWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Список заказов" FontSize="20" FontWeight="Bold" Margin="10 0" />
        <DataGrid Grid.Row="1" x:Name="dgDelivery" AutoGenerateColumns="False" Height="200" 
                  Margin="10" VerticalAlignment="Top" SelectionChanged="dgDelivery_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер" Binding="{Binding Path= Id}" />
                <DataGridTextColumn Header="Дата создания" Binding="{Binding Path= OpeningDateTime}" />
                <DataGridTextColumn Header="Дата закрытия" Binding="{Binding Path= ClosingDateTime}" />
                <DataGridTextColumn Header="Улица" Binding="{Binding Path= Street}" />
                <DataGridTextColumn Header="Дом" Binding="{Binding Path= House}" />
                <DataGridTextColumn Header="Корпус" Binding="{Binding Path= Building}" />
                <DataGridTextColumn Header="Кватира" Binding="{Binding Path= Apartment}" />
                <DataGridTextColumn Header="Статус" Binding="{Binding Path= Status.Title}" />
                <DataGridTextColumn Header="Клиент" Binding="{Binding Path= Client.LastName}" />
                <DataGridTextColumn Header="Курьер" Binding="{Binding Path= Courier.LastName}" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2">
            <TextBlock Text="Состав заказа" FontSize="20" FontWeight="Bold" Margin="10 0"/>
            <DataGrid Grid.Row="1" x:Name="dgProducts" AutoGenerateColumns="False" Height="150" Width="400"
                      HorizontalAlignment="Left" Margin="10" SelectionChanged="dgDelivery_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Название продукта" Binding="{Binding Path= Title}"  Width="300"/>
                    <DataGridTextColumn Header="Количество" Binding="{Binding Path= AmountInDelivery}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

    </Grid>
</Window>
