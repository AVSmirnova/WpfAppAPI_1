<Window x:Class="WpfAppAPI_1.Views.RegistrWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppAPI_1.Views"
        mc:Ignorable="d"
        Title="AuthWindow" Height="450" Width="500">
    <Grid>
        <StackPanel >
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Имя"/>
                <TextBox x:Name="firsName" Width="150" Height="30" Margin="10"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Фамилия"/>
                <TextBox x:Name="lastName" Width="150" Height="30" Margin="10"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Дата рождения"/>
                <DatePicker Name="dpDateOfBirth"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Логин"/>
                <TextBox x:Name="login" Width="150" Height="30" Margin="10"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Пароль"/>
                <TextBox x:Name="password" Width="150" Height="30" Margin="10"/>
            </StackPanel>
            <StackPanel>
                <Button x:Name="btnAuth" Content="Зарегистрироваться" Height="30" Width="200" Click="btnAuth_Click"/>
            </StackPanel>
            
        </StackPanel>
        
    </Grid>
</Window>
